@model FicLibraryMvcPL.Models.AuthModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
    var ajaxOptions = new AjaxOptions
    {
        UpdateTargetId = "logon-parent",
        HttpMethod = "POST",
        LoadingElementId = "preloader"
    };
}
<div class="login-form padding20">
    <h1 class="text-light" align="center">Регистрация</h1>
    <hr class="thin"/><br>

    @using (Ajax.BeginForm("Register", "Account", ajaxOptions))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <div class="input-control text full-size" data-role="validator input" style="margin: 10pt 0">
                @Html.LabelFor(model => model.UserName)
                @Html.EditorFor(model => model.UserName)
            </div>

            <div class="input-control email full-size" data-role="validator input" style="margin: 10pt 0">
                @Html.LabelFor(model => model.Email)
                @Html.EditorFor(model => model.Email)
            </div>

            <div class="input-control password full-size" data-role="validator input" style="margin: 10pt 0">
                @Html.LabelFor(model => model.Password)
                @Html.EditorFor(model => model.Password)
            </div>

            <div class="input-control password full-size" data-role="validator input" style="margin: 10pt 0">
                @Html.LabelFor(model => model.ConfirmPassword)
                @Html.EditorFor(model => model.ConfirmPassword)
            </div>


            <div id="preloader" data-role="preloader" data-type="metro" data-style="color" style="display: none"></div>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})

            <div class="form-horizontal" style="margin: 10pt 0" align="center">
                <button type="submit" class="button success">Регистрация</button>
                @Html.ActionLink("Вход", "Login", new {}, new {@class = "button primary"})
            </div>
        </div>
    }
</div>
